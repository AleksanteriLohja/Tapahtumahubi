<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="Tapahtumahubi.App.AddEditParticipantPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="{Binding PageTitle}">
    <VerticalStackLayout Padding="16" Spacing="12">
        <Entry x:Name="NameEntry" Placeholder="Nimi" Text="{Binding Name}" />
        <Entry x:Name="EmailEntry" Placeholder="Sähköposti" Keyboard="Email" Text="{Binding Email}" />
        <Grid ColumnDefinitions="*,Auto">
            <Label Text="" />
            <Button Grid.Column="1" Text="Tallenna" Clicked="OnSaveClicked" />
        </Grid>
    </VerticalStackLayout>
</ContentPage>